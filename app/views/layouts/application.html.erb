    <div class="form-inline my-2 my-lg-0">
      <%= current_user.name%>
    </div>
    <%end%>
  </div>
   <div>
     <p class="notice"><%= notice %></p>
        <p class="alert"><%= alert %></p>
   </div>
</nav>
